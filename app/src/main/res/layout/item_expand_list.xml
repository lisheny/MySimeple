<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_margin="@dimen/margin"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/iv_expand_app_ic" />

    <TextView
        android:id="@+id/tv_expand_name"
        android:textSize="@dimen/subhead"
        android:text="应用名字"
        android:textColor="@color/write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_expand_app_ic"
        android:layout_toEndOf="@+id/iv_expand_app_ic" />
    <TextView
        android:id="@+id/tv_expand_content"
        android:layout_marginRight="@dimen/margin"
        android:maxLines="2"
        android:textSize="@dimen/subhead"
        android:text="应用名字应用名应用名字应用名字应用名字应用名字应用名字应用名字字应用名字应用名字应用名字应用名字"
        android:textColor="@color/write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_expand_app_ic"
        android:layout_toEndOf="@+id/iv_expand_app_ic" />

</RelativeLayout>