<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_margin">

    <TextView
        android:textSize="@dimen/subhead"
        android:id="@+id/tv_myfilter_name"
        android:layout_margin="@dimen/margin"
        android:layout_gravity="center_vertical"
        android:text="滤镜1"
        android:textColor="@color/write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_myfilter_state"
        android:textSize="@dimen/menu"
        android:layout_gravity="center_vertical"
        android:text="下载失败，请重试"
        android:textColor="@color/write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView

        android:id="@+id/iv_myfilter_state"
        android:layout_margin="@dimen/margin"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_usename"
        android:layout_width="@dimen/right_content_margin"
        android:layout_height="@dimen/right_content_margin" />



</LinearLayout>